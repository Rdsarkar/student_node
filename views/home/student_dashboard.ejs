                        <i class="fas fa-users"></i> <a href="s_payment.html">Payment</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="s_pre_course.html">Pre. Course</a>
                    </li> -->

                </ul>
            </div>
            <!-- Sidebar -->
            <div id="content-wrapper">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 border border-warning mt-2">
                            <h1 class="mt-5">Personal Info</h1>
                            <form action="" method="POST">
                                <div class="form-group pt-2">
                                    <label for="fullname">Full Name of Student: <%= results[0].sname%></label>
                                    
                                </div>
            
                                <div class="form-group">
                                    <label for="SchoolCollege">Name of School/college: <%= results[0].sinstitution%></label>
                                    
                                </div>
                                    
                                
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email: <%= results[0].semail%></label>
                                    
                                </div>

            
                                <div class="form-group">
                                    <label for="SPhoneNumber">Phone Number: <%= results[0].sphone %></label>
                                    
                                </div>
            
                                <div class="form-group">
                                    <label  for="parents">Full Name of Parent: <%= results[0].spname %> </label>
                                    
                                    <span id = "parentsname" class = "text-danger font-weight-bold"></span>
                                </div>
            
                                <div class="form-group">
                                    <label for="PPhoneNumber">Parent Phone Number:<%= results[0].spphone%> </label>
                                    
                                </div>
